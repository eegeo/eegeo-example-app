<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poi_creation_confirmation_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/poi_creation_confirmation_close_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_pressed_colour_change"
            android:clickable="true"
            android:src="@drawable/button_pin_close_states" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/pin_confirmation_title"
                android:textColor="@color/darkgrey"
                android:textSize="14dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/poi_creation_confirmation_ok_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_pressed_colour_change"
            android:clickable="true"
            android:src="@drawable/button_pin_ok_states" />
    </LinearLayout>

</RelativeLayout>